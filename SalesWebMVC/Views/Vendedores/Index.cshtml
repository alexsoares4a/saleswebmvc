@model IEnumerable<SalesWebMVC.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedor";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Cadastrar" class="btn btn-primary">Cadastrar</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAniversario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.DataAniversario)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.SalarioBase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Excluir" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>