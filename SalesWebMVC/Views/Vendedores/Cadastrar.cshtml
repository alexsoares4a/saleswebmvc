@model SalesWebMVC.Models.Vendedor 
@{
    ViewData["Title"] = "Cadastrar";
}

<h4>Vendedores</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div class="form-group">
                <label asp-for="Nome" class="col-form-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataAniversario" class="col-form-label"></label>
                <input asp-for="DataAniversario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SalarioBase" class="col-form-label"></label>
                <input asp-for="SalarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>