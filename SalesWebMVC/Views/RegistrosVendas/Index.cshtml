
@{
    ViewData["Title"] = "Busca Vendas";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <form class="list-group-horizontal-md" asp-action="BuscaSimples">
            <fieldset>
                <legend>Busca Simples</legend>
                <div class="form-group">
                    <label for="dataInicial" class="col-lg-2 custom-control-label">Data Inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataInicial" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataFinal" class="col-lg-2 custom-control-label">Data Final</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataFinal" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="list-group-horizontal-md" asp-action="BuscaAgrupada">
            <fieldset>
                <legend>Busca Agrupada</legend>
                <div class="form-group">
                    <label for="dataInicial" class="col-lg-2 custom-control-label">Data Inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataInicial" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataFinal" class="col-lg-2 custom-control-label">Data Final</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataFinal" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

