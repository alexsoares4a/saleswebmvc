@model IEnumerable<SalesWebMVC.Models.RegistroVendas>

@{
    ViewData["Title"] = "Vendas";
}

<h1>@ViewData["Title"]</h1>

<nav class="navbar navbar-light">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="dataInicial">Data Inicial</label>
                    <input type="date" class="form-control" name="dataInicial" value=@ViewData["dataInicial"] />
                </div>
                <div class="form-group">
                    <label for="dataFinal">Data Final</label>
                    <input type="date" class="form-control" name="dataFinal" value=@ViewData["dataFinal"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>
</nav>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de Vendas = @Model.Sum(obj => obj.Quantidade).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="bg-success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataVenda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vendedor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vendedor.Departamento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SituacaoVendas)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.DataVenda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Vendedor.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Vendedor.Departamento.NomeDepartamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.SituacaoVendas)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>